<!Doctype html>
<html>

<head>
    <meta charset="utf-8">
    <title>
        キャラクター詳細
    </title>
    <style>
        table,
        th,
        td {
            border: 1px solid black;
            border-collapse: collapse;
        }

        th,
        td {
            padding: 10px;
        }
    </style>
</head>

<body>
    <h2>
        <%= data.chara_name %>の詳細
    </h2>
    <table>
        <tr>
            <th>項目</th>
            <th>データ</th>
        </tr>
        <tr>
            <td>登録ID</td>
            <td>
                <%= data.chara_id %>
            </td>
        </tr>
        <tr>
            <td>キャラクター名</td>
            <td>
                <%= data.chara_name %>
            </td>
        </tr>
        <tr>
            <td>元素属性</td>
            <td>
                <%= data.element %>
            </td>
        </tr>
        <tr>
            <td>限定/恒常の区分</td>
            <td>
                <%= data.limited_chara %>
            </td>
        </tr>
        <tr>
            <td>突破ボーナス項目名</td>
            <td>
                <%= data.levelbonus_name %>
            </td>
        </tr>
        <tr>
            <td>突破ボーナス値</td>
            <td>
                <%= data.levelbonus_value %>
            </td>
        </tr>
        <tr>
            <td>武器種</td>
            <td>
                <%= data.weapon_type %>
            </td>
        </tr>
        <tr>
            <td>キャラレベル</td>
            <td>
                <%= data.level %>
            </td>
        </tr>
        <tr>
            <td>通常攻撃天賦レベル</td>
            <td>
                <%= data.nomal_talent_level %>
            </td>
        </tr>
        <tr>
            <td>元素スキル天賦レベル</td>
            <td>
                <%= data.skill_talent_level %>
            </td>
        </tr>
        <tr>
            <td>元素爆発天賦レベル</td>
            <td>
                <%= data.burst_talent_level %>
            </td>
        </tr>
        <tr>
            <td>役割</td>
            <td>
                <%= data.role %>
            </td>
        </tr>
        <tr>
            <td>命の星座凸数</td>
            <td>
                <%= data.totu %>
            </td>
        </tr>
        
    </table>
    <a href="/chara/edit/<%= data.chara_id %>">編集</a>
    <a href="/chara">キャラクター一覧へ戻る</a>
    <form action="/chara_delete/<%= data.chara_id %>" method="POST" style="display:inline;">
        <button type="submit" onclick="return confirm('本当に削除しますか？');">削除</button>
    </form>
</body>

</html>